@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<EditForm Model="@ConfigVm">
    <div class="form-group row">
            <label for="BusinessArea" class="col-sm-3">Business Area: </label>
            <InputText id="BusinessArea" class="form-control col-sm-8" @bind-Value="@ConfigVm.BusinessArea" placeholder=""></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => ConfigVm.BusinessArea)" />
        </div>

    <div class="form-group row">
        <label for="RouteInboundSmsToEmail" class="col-sm-3">Route Inbound Sms to Email: </label>
        <InputCheckbox id="RouteInboundSmsToEmail" class="form-control col-sm-8" @bind-Value="@ConfigVm.RouteInboundSmsToEmail" placeholder=""></InputCheckbox>
    </div>
</EditForm>

@code
{
    public ConfigViewModel ConfigVm { get; set; } = new ConfigViewModel();
}
